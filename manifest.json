{
  "manifest_version": 3,
  "name": "SoloPlay",
  "version": "1.1",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["*://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
